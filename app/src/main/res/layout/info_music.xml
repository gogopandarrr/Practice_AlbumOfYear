<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_card"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView2"
        android:layout_alignRight="@+id/cardView2"
        android:layout_below="@+id/cardView2">


        <ViewSwitcher
            android:id="@+id/switcher_album"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_albumTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="album title"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ev_albumTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="album title"
                android:textSize="16dp"
                android:textStyle="bold" />
        </ViewSwitcher>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="180dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switcher_album"
            android:textSize="12dp"
            android:text="artist"
            android:textColor="#9c6409" />



            />



        <com.hsalf.smilerating.SmileRating
            android:id="@+id/smile_rating"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="200dp" />


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/smile_rating"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/btn_edit" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/btn_url" />

            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:clickable="true"
                android:src="@drawable/btn_del" />
        </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_artist">

            <ImageView
                android:clickable="true"
                android:id="@+id/btn_open"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="16dp"
                android:src="@drawable/ic_open"
                />


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_menu"
            android:orientation="vertical"
            android:layout_below="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            app:el_parallax="0.5"
            >

            <ViewSwitcher
                android:id="@+id/switcher_comment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/smile_rating"
                android:layout_alignStart="@+id/smile_rating"
                android:layout_below="@id/smile_rating"
                >


                <com.luseen.autolinklibrary.AutoLinkTextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="write tag or your comment"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/ev_comment"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="#tag, your comment"
                    android:textSize="12sp" />
            </ViewSwitcher>


        </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>


