<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_card"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView2"
        android:layout_alignRight="@+id/cardView2"
        android:layout_below="@+id/cardView2">

        <ImageView
            android:id="@+id/cover"
            android:src="@drawable/cover5"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />


        <ViewSwitcher
            android:id="@+id/switcher_album"
            android:layout_below="@id/tv_artist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_albumTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="album title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ev_albumTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="album title"
                android:textStyle="bold" />
        </ViewSwitcher>

        <ViewSwitcher
            android:layout_below="@+id/switcher_album"
            android:id="@+id/switcher_comment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            >
            <com.luseen.autolinklibrary.AutoLinkTextView
                android:id="@+id/tv_comment"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Press Long Click to Edit"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/ev_comment"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="#Tag, Comment"
                android:textSize="12sp" />
        </ViewSwitcher>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="artist"
            android:textColor="#9c6409" />

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/rank"
            android:src="@drawable/emo0_basic"
            android:layout_below="@+id/switcher_album"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="4dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />




        <LinearLayout
            android:id="@+id/btns"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/btn_edit" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/btn_url" />

            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:clickable="true"
                android:src="@drawable/btn_del" />
        </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switcher_comment">

            <ImageView
                android:clickable="true"
                android:id="@+id/btn_open"
                android:layout_width="match_parent"
                android:scaleType="centerInside"
                android:layout_height="20dp"
                android:src="@drawable/ic_open"
                />


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_menu"
            android:orientation="vertical"
            android:layout_below="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="300"
            app:el_expanded="false"
            app:el_parallax="0.5"
            >


            <com.hsalf.smilerating.SmileRating
                android:id="@+id/smile_rating"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp" />





        </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>


