<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/db_card"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user"
            android:src="@drawable/cover2"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/material_orange_600"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:text="title of list"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_db_title" />

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="user"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_user"
            android:layout_below="@+id/iv_user"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_db_title"
            android:layout_toEndOf="@+id/iv_user"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv8"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv9"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <ImageView
                    android:id="@+id/iv10"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_more"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignEnd="@+id/tv_db_title"
            android:src="@mipmap/ic_add" />

    </RelativeLayout>

</android.support.v7.widget.CardView>