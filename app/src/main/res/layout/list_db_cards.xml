<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/db_card"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLiner"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">

            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="user"
                android:textColor="@color/galleryAccent"
                android:id="@+id/tv_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="9"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/material_red_a400"
                android:text="title of list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_db_title" />

        </LinearLayout>
       <TextView
           android:textColor="@color/sd_label_text_color"
           android:text="0000-00-00"
           android:layout_marginTop="10dp"
           android:textSize="8dp"
           android:layout_marginRight="8dp"
           android:gravity="right"
           android:id="@+id/date"
           android:layout_below="@+id/topLiner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="300dp"
            android:weightSum="5"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/line1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/iv6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <ImageView
                    android:id="@+id/iv9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp">
                    <ImageView
                        android:id="@+id/iv10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_add"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:elevation="16dp"
                        />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>